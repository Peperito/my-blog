---
const {post} = Astro.props;
---


<a href={post.url} class="flex flex-row justify-between m-4 mx-16 shadow-lg">
    <div class="flex flex-col m-6 overflow-hidden">
        <p class="text-2xl font-bold p-2">{post.frontmatter.title}</p>
        <p class="text-md font-medium p-2">{post.frontmatter.description}</p>
        <time class="p-2" datetime={post.frontmatter.publishDate}>
        {new Date(post.frontmatter.publishDate).toLocaleDateString('en-us', {
            year: 'numeric',
            month: 'short',
            day: 'numeric',
        })}
        </time>
        <p class="mt-4 px-4 py-2 w-32 bg-slate-300 text-slate-900 text-center rounded-md" >{post.frontmatter.category}</p>
    </div>
    <img class="w-auto h-60 hidden xl:block" src={post.frontmatter.heroImage} alt="blogImage" />
</a>







